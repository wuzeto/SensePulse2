<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xui_config_color_white"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        style="@style/InfoItem.Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/maixiang_feature"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />
    <TextView
        style="@style/InfoItem.Account"
        android:id="@+id/maixiang_feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />


    <TextView
        style="@style/InfoItem.Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_disease_title"
        android:text="@string/main_disease"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />
    <TextView
        style="@style/InfoItem.Account"
        android:id="@+id/main_disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/InfoItem.Account"
                    android:id="@+id/title_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:visibility="gone" />

                <TextView
                    style="@style/InfoItem.Account"
                    android:id="@+id/maixiang_feature_title_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/maixiang_feature"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:visibility="gone" />
                <TextView
                    style="@style/InfoItem.Account"
                    android:id="@+id/maixiang_feature_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:visibility="gone" />

                <TextView
                    style="@style/InfoItem.Account"
                    android:id="@+id/main_disease_title_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_disease"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:visibility="gone" />
                <TextView
                    style="@style/InfoItem.Account"
                    android:id="@+id/main_disease_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- 底部的按钮布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="1">

        <!-- 第一个按钮 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始"
            android:layout_marginStart="16dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- 第二个按钮 -->
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

</LinearLayout>


