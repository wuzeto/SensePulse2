<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PullDownStyle">

    <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:padding="16dp">

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/setting_language"
                style="@style/InfoItem.Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sLeftTextString="应用语言"
                app:sRightIconDrawable="@drawable/ic_arrow_right" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/setting_clear_cache"
                style="@style/InfoItem.Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sLeftTextString="清除缓存"
                app:sRightIconDrawable="@drawable/ic_arrow_right" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/setting_check_update"
                style="@style/InfoItem.Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sLeftTextString="检查更新"
                app:sRightIconDrawable="@drawable/ic_arrow_right" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>
